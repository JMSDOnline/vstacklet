# @description: Display the version of the backup script. [see function](https://github.com/JMSDOnline/vstacklet/blob/main/bin/backup/vs-backup#L855-L861)
# @break
##################################################################################
vstacklet::backup::version() {
	# @script-note: set the version of the backup script
	version="$(grep -E '^# @version:' "/usr/local/bin/vs-backup" | awk '{print $3}')"
	vstacklet::shell::text::white "vStacklet Backup Utility v${version}"
	vstacklet::shell::misc::nl
	exit 0
}

################################################################################
# @description: Miscellaneous functions.
# @break
################################################################################

##################################################################################
# @name: vstacklet::backup::database_decrypt
# @description: List the files in the backup directory and decrypt selected options. [see function](https://github.com/JMSDOnline/vstacklet/blob/main/bin/backup/vs-backup#L878-L937)
#
# notes:
# - This function will allow you to decrypt a database backup file.
# - You can use the `-dbextract` option instead if you want to decrypt **and** extract the file.
# @example: vs-backup -dbdecrypt
# @break
##################################################################################
vstacklet::backup::database_decrypt() {
	# @script-note: create welcome and information message
	vstacklet::shell::text::white "Welcome to the vStacklet Database Backup Decryption Utility."
	vstacklet::shell::misc::nl
	vstacklet::shell::text::white "This script will allow you to decrypt a database backup file."
	vstacklet::shell::text::white "You can use the $(tput setaf 5)-dbextract${shell_reset}$(tput setaf 7) option to decrypt and extract the file."
	vstacklet::shell::misc::nl
	vstacklet::shell::text::green "Press any key to continue $(tput setaf 7)(${shell_reset}$(tput setaf 3)ctrl+C${shell_reset} $(tput setaf 7)on PC or $(tput setaf 7)${shell_reset}$(tput setaf 3)⌘+C${shell_reset} $(tput setaf 7)on Mac to ${shell_reset}$(tput setaf 1)exit${shell_reset}$(tput setaf 7)) ..."
	read -r -n 1
	vstacklet::shell::misc::nl
	# @script-note: check if the database directory exists
	[[ ! -d "${db_dir_dest:-/backup/databases/}" ]] && vstacklet::shell::text::error "The database backup directory does not exist." && vstacklet::shell::misc::nl && exit 1
	# @script-note: check if the temporary database directory exists
	[[ ! -d "${db_tmp_dir_dest:-/tmp/vstacklet/backup/databases/}" ]] && vstacklet::shell::text::error "The temporary database backup directory does not exist." && vstacklet::shell::misc::nl && exit 1
	# @script-note: check if the database directory is empty
	[[ -z "$(ls -A "${db_dir_dest:-/backup/databases/}")" ]] && vstacklet::shell::text::error "The database backup directory is empty." && vstacklet::shell::misc::nl && exit 1
	# @script-note: if there is no .enc file, exit
	shopt -s nullglob
	if ! files=("${db_dir_dest:-/backup/databases/}"*.enc); then
		vstacklet::shell::text::error "No encrypted database backup files found."
		vstacklet::shell::misc::nl
		exit 1
	fi
	if [[ ${#files[@]} -eq 0 ]]; then
		vstacklet::shell::text::error "No encrypted database backup files found."
		vstacklet::shell::misc::nl
		vstacklet::shell::text::notice "The following files are, however, in the database backup directory:"
		ls -lh "${db_dir_dest:-/backup/databases/}"
		vstacklet::shell::misc::nl
		exit 1
	fi
	# @script-note: list the files in the backup directory
	vstacklet::shell::text::white "The following files are in the database backup directory:"
	#ls -lh "${db_dir_dest:-/backup/databases/}"
	vstacklet::shell::misc::nl
	# @script-note: prompt the user to select a file (.enc extension only)
	select file in $(find "${db_dir_dest:-/backup/databases/}" -type f -name "*.enc" -exec basename {} \;); do
		# @script-note: check if the user selected a file
		[[ -z "${db_dir_dest:-/backup/databases/}${file}" ]] && vstacklet::shell::text::error "Invalid selection." && vstacklet::shell::misc::nl && exit 1
		# @script-note: check if the file exists
		[[ ! -f "${db_dir_dest:-/backup/databases/}${file}" ]] && vstacklet::shell::text::error "The file does not exist." && vstacklet::shell::misc::nl && exit 1
		vstacklet::shell::misc::nl
		# @script-note: prompt the user for the password to decrypt the file
		vstacklet::shell::text::white "Enter the database password to decrypt the file:"
		read -r -s password
		# @script-note: remove the .enc extension from the file and replace it with compressed extension
		file_out="${file%.enc}"
		# @script-note: decrypt the file
		openssl enc -d -pbkdf2 -in "${db_dir_dest:-/backup/databases/}${file}" -out "${db_tmp_dir_dest:-/tmp/vstacklet/backup/databases/}${file_out}" -k "${password}"
		vstacklet::shell::text::success "The file was decrypted successfully!"
		vstacklet::shell::misc::nl
		# @script-note: get the name of the decrypted file
		file_decrypted="${file%.enc}"
		# @script-note: print out the directory of the decrypted file
		vstacklet::shell::text::info "The decrypted file is located at:"
		vstacklet::shell::text::white "  ${db_tmp_dir_dest:-/tmp/vstacklet/backup/databases/}${file_decrypted}"
		vstacklet::shell::misc::nl
		break
	done
}

################################################################################
# @name: vstacklet::backup::database_extract
# @description: List the files in the backup directory and extract selected options. [see function](https://github.com/JMSDOnline/vstacklet/blob/main/bin/backup/vs-backup#L949-L1061)
#
# notes:
# - This function will allow you to extract a database backup file.
# - This function will also decrypt the file if it is encrypted.
# @example: vs-backup -dbextract
# @break
##################################################################################
vstacklet::backup::database_extract() {
	# @script-note: create welcome and information message
	vstacklet::shell::text::white "Welcome to the vStacklet Database Backup Extraction Utility."
	vstacklet::shell::misc::nl
	vstacklet::shell::text::white "This script will allow you to extract a database backup file."
	vstacklet::shell::text::white "This script will also decrypt the file if it is encrypted."
	vstacklet::shell::text::white "You can use the $(tput setaf 5)-dbdecrypt${shell_reset}$(tput setaf 7) option if you only want to decrypt the file."
	vstacklet::shell::misc::nl
	vstacklet::shell::text::green "Press any key to continue $(tput setaf 7)(${shell_reset}$(tput setaf 3)ctrl+C${shell_reset} $(tput setaf 7)on PC or $(tput setaf 7)${shell_reset}$(tput setaf 3)⌘+C${shell_reset} $(tput setaf 7)on Mac to ${shell_reset}$(tput setaf 1)exit${shell_reset}$(tput setaf 7)) ..."
	read -r -n 1
	vstacklet::shell::misc::nl
	# @script-note: list the files in the backup directory
	vstacklet::shell::text::white "The following files are in the database backup directory:"
	# @script-note: only show the file name
	#ls -lh "${db_dir_dest:-/backup/databases/}" | awk '{print $NF}'
	# @script-note: if there is no .enc or .gz file, exit
	shopt -s nullglob
	if ! files=("${db_dir_dest:-/backup/databases/}"*.enc "${db_dir_dest:-/backup/databases/}"*.gz); then
		vstacklet::shell::text::error "No encrypted or compressed database backup files found."
		vstacklet::shell::misc::nl
		exit 1
	fi
	if [[ ${#files[@]} -eq 0 ]]; then
		vstacklet::shell::text::error "No encrypted or compressed database backup files found."
		vstacklet::shell::misc::nl
		exit 1
	fi
	vstacklet::shell::misc::nl
	# @script-note: prompt the user to select a file (exclude full path. only show the file name)
	select file in $(find "${db_dir_dest:-/backup/databases/}" -type f -exec basename {} \;); do
		# @script-note: check if the user selected a file
		[[ -z "${db_dir_dest:-/backup/databases/}${file}" ]] && vstacklet::shell::text::error "Invalid selection." && vstacklet::shell::misc::nl && exit 1
		# @script-note: check if the file exists
		[[ ! -f "${db_dir_dest:-/backup/databases/}${file}" ]] && vstacklet::shell::text::error "The file does not exist." && vstacklet::shell::misc::nl && exit 1
		vstacklet::shell::misc::nl
		# @script-note: prompt the user for the password to decrypt the file if it is encrypted
		if [[ "${db_dir_dest:-/backup/databases/}${file}" == *.enc ]]; then
			vstacklet::shell::text::white "Enter the database password to decrypt the file:"
			read -r -s password
			# @script-note: remove the .enc extension from the file and replace it with compressed extension
			file_out="${file%.enc}"
			openssl enc -d -pbkdf2 -in "${db_dir_dest:-/backup/databases/}${file}" -out "${db_dir_dest:-/backup/databases/}${file_out}" -k "${password}"
			vstacklet::shell::text::success "The file was decrypted successfully!"
			vstacklet::shell::misc::nl
			declare -g file file_extracted
			file="${file_out}"
			file_decrypted=true
		fi
		# @script-note: prompt the user to extract the file
		vstacklet::shell::text::white "Extract the file?"
		# @script-note: make the Yes option green and the No option red
		select yn in "$(echo -e "$(tput setaf 2)Yes$(tput sgr0)")" "$(echo -e "$(tput setaf 1)No$(tput sgr0)")"; do
			case "$yn" in
			"$(echo -e "$(tput setaf 2)Yes$(tput sgr0)")")
				# @script-note: extract the file
				# @script-note: reserved for future use (if tar.gz files are used)
				#tar -xzf "${db_dir_dest:-/backup/databases/}${file}" -C "${db_tmp_dir_dest:-/tmp/vstacklet/backup/databases/}"
				gunzip -c "${db_dir_dest:-/backup/databases/}${file}" >"${db_tmp_dir_dest:-/tmp/vstacklet/backup/databases/}${file%.gz}.sql"
				vstacklet::shell::text::success "The file was extracted successfully!"
				# @script-note: get the name of the extracted file (remove the .gz extension and replace it with the .sql extension)
				file_extracted="${file%.gz}.sql"
				vstacklet::shell::misc::nl
				# @script-note: print out the directory of the extracted file
				vstacklet::shell::text::info "The extracted file is located at:"
				vstacklet::shell::text::white "  ${db_tmp_dir_dest:-/tmp/vstacklet/backup/databases/}${file_extracted}"
				vstacklet::shell::misc::nl
				# @script-note: if the file was previously encrypted, remove the decrypted file
				if [[ "${file_decrypted}" == true ]]; then
					vstacklet::shell::text::white "Remove the decrypted file?"
					select yn in "$(echo -e "$(tput setaf 2)Yes$(tput sgr0)")" "$(echo -e "$(tput setaf 1)No$(tput sgr0)")"; do
						case "$yn" in
						"$(echo -e "$(tput setaf 2)Yes$(tput sgr0)")")
							rm -f "${db_dir_dest:-/backup/databases/}${file_out}"
							# @script-note: check if the file was removed
							if [[ ! -f "${db_dir_dest:-/backup/databases/}${file_out}" ]]; then
								vstacklet::shell::text::success "The file was removed successfully."
								vstacklet::shell::misc::nl
							else
								vstacklet::shell::text::error "The file was not removed."
								vstacklet::shell::misc::nl
							fi
							break
							;;
						"$(echo -e "$(tput setaf 1)No$(tput sgr0)")")
							vstacklet::shell::text::notice "The file was not removed."
							vstacklet::shell::misc::nl
							break
							;;
						*)
							vstacklet::shell::text::error "Invalid selection."
							vstacklet::shell::misc::nl
							exit 1
							;;
						esac
					done
				fi
				break
				;;
			"$(echo -e "$(tput setaf 1)No$(tput sgr0)")")
				vstacklet::shell::text::notice "The file was not extracted."
				vstacklet::shell::misc::nl
				break
				;;
			*)
				vstacklet::shell::text::error "Invalid selection."
				vstacklet::shell::misc::nl
				exit 1
				;;
			esac
		done
		break
	done
}

################################################################################
# @description: Calls functions in required order.
# @break
################################################################################
vstacklet::environment::checkroot                                                 #(1)
vstacklet::environment::functions                                                 #(2)
vstacklet::backup::updater                                                        #(3)
vstacklet::backup::variables "${@}"                                               #(4)
vstacklet::backup::default::variables                                             #(5)
vstacklet::backup::main::checks                                                   #(6)
[[ "${ras_cron}" != "true" ]] && vstacklet::intro                                 #(7)
[[ "${backup_file_yes}" -eq 1 ]] && vstacklet::backup::files                      #(8)
[[ "${backup_db_yes}" -eq 1 ]] && vstacklet::backup::database                     #(9)
vstacklet::backup::retention                                                      #(10)
[[ "${cron_creation_task}" == "true" ]] && vstacklet::backup::cron::create "${@}" #(11)
vstacklet::outro                                                                  #(12)
